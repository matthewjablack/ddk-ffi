{
  "name": "@bennyblader/ddk-rn",
  "version": "0.3.29",
  "description": "dlcdevkit bindings for react-native",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "react-native": "./src/index.tsx",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "cpp",
    "lib",
    "ddk-ffi",
    "android/build.gradle",
    "android/CMakeLists.txt",
    "android/cpp-adapter.cpp",
    "android/gradle.properties",
    "android/proguard-rules.pro",
    "android/src/main/AndroidManifest.xml",
    "android/src/main/AndroidManifestNew.xml",
    "android/src/main/java",
    "ios/DdkRn.h",
    "ios/DdkRn.mm",
    "scripts/postinstall.js",
    "scripts/prepare-rust-src.js",
    "scripts/apply-hotfix.js",
    "ubrn.config.yaml",
    "*.podspec",
    "react-native.config.js",
    "README.md",
    "!ddk-ffi/target",
    "!**/*.a",
    "!**/*.so",
    "!**/*.dylib",
    "!**/*.framework",
    "!**/*.xcframework",
    "!**/jniLibs",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "pnpm --filter example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "postinstall": "node scripts/postinstall.js",
    "release": "release-it",
    "release-full": "node scripts/release.js",
    "create-archives": "node scripts/create-binary-archives.js",
    "uniffi:clean": "rm -rf cpp/DdkFFI.* src/DdkFFI.* src/types.ts ios/*.xcframework android/src/main/jniLibs",
    "example:ios": "pnpm --filter example ios",
    "example:android": "pnpm --filter example android",
    "example:pods": "pnpm --filter example pod-install"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennyhodl/ddk-ffi.git"
  },
  "author": "benny b <ben@bitcoinbay.foundation> (https://github.com/bennyhodl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bennyhodl/ddk-ffi/issues"
  },
  "homepage": "https://github.com/bennyhodl/ddk-ffi#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "codegenConfig": {
    "name": "RNDdkRnSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.ddkrn"
    },
    "ios": {
      "modules": {
        "DdkRn": {
          "className": "DdkRn"
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.75.5",
    "react-native-builder-bob": "0.30.0",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true,
      "access": "public"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.20.0",
    "uniffi-bindgen-react-native": "0.29.3-1"
  }
}
